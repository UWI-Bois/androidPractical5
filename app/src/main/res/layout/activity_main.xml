<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/p5bg"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/riddle_et"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="300dp"
        android:ems="10"
        android:background="@color/white"
        android:gravity="start|top"
        android:hint="Riddle"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/phoneno_et"
        app:layout_constraintStart_toStartOf="@+id/phoneno_et"
        app:layout_constraintTop_toBottomOf="@+id/phoneno_et" />

    <EditText
        android:id="@+id/phoneno_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:background="@color/white"
        android:hint="Phone Number "
        android:inputType="phone"
        android:text="+15555215556"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/solution_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:background="@color/white"
        android:hint="Solution"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/riddle_et"
        app:layout_constraintStart_toStartOf="@+id/riddle_et"
        app:layout_constraintTop_toBottomOf="@+id/riddle_et" />

    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Send Riddle"
        app:layout_constraintStart_toStartOf="@+id/solution_et"
        app:layout_constraintTop_toBottomOf="@+id/solution_et" />

</androidx.constraintlayout.widget.ConstraintLayout>